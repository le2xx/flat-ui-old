.slider

  &__value
    position relative
    margin-bottom 5px
    margin-left 0
    display block
    width 35px
    height 24px
    font(13, #ffffff, .05, 25, 900)
    font-family Lato, sans-serif
    text-align center
    background #e75735
    border-radius 5px

    &::after
      position absolute
      z-index -1
      top 16px
      right 0
      left 0
      margin auto
      width 10px
      height 10px
      transform rotate(45deg)
      content ''
      background #e75735

  &__input

    &[type=range]
      -webkit-appearance none
      width 100%
      height 5px
      background #e5e5e5
      border-radius 3px
      outline none

      &::-webkit-slider-thumb
        -webkit-appearance none
        width 21px
        height 21px
        cursor pointer
        background #e75735
        border-radius 50%

      &::-moz-range-track
        height 5px
        background #e5e5e5
        border-radius 3px

      &::-moz-range-thumb
        width 21px
        height 21px
        cursor pointer
        background #e75735
        border none
        border-radius 50%
