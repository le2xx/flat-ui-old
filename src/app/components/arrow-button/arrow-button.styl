.arrow-button
  position relative
  padding 0
  display block
  width 50px
  height 50px
  background #fff
  border 3px solid #4eb7a8
  border-radius 50%
  outline none


  &__icon
    position absolute
    top 0
    right 0
    left 0
    bottom 0
    fill #4eb7a8
    margin auto

  &:hover
    background #4eb7a8

  &:hover  &__icon
    fill #fff

  &:disabled
  &[disabled]
    background #e5e5e5
    border-color #e5e5e5

  &:disabled &__icon
  &[disabled] &__icon
    fill #fff

  &_arrow_right
    transform rotate(180deg)

